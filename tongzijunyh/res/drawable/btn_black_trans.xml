<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#77cccccc" />
                    <corners android:radius="8dip" />
                </shape>
             </item>
            <item android:left="1dip" android:top="1dip" android:bottom="1dip" android:right="1dip">
                <shape>
                    <solid android:color="#77cccccc" />
                    <corners android:radius="8dip" />
                </shape>
             </item>
        </layer-list>
	</item>
	<!-- 默认状态 -->
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#77cccccc" />
                    <corners android:radius="8dip" />
                </shape>
             </item>
            <item android:left="1dip" android:top="1dip" android:bottom="1dip" android:right="1dip">
                <shape>
                    <solid android:color="#77000000" />
                    <corners android:radius="8dip" />
                </shape>
             </item>
        </layer-list>
	</item>
</selector>