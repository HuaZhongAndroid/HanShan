<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8000"
    android:gravity="center"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="268dp"
        android:layout_height="317dp"
        android:background="@drawable/addbody_back"
        android:layout_gravity="center" >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="154dp"
                android:layout_height="123dp"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="71dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tongzhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="开启消息通知"
                android:textColor="#433302"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_money_des"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="未开启通知，您可能错过会员优惠、时间提醒信息。"
                android:textColor="#857F71"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:gravity="bottom" >

                <TextView
                    android:id="@+id/bt_ok"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    android:text="立即开启"
                    android:gravity="center"
                    android:background="@drawable/addbody_bt" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_gravity="right"
            android:scaleType="fitStart"
            android:src="@drawable/addbody_close" />

    </FrameLayout>

</LinearLayout>
