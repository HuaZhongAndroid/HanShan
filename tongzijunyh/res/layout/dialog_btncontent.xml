<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:padding="0dip" >
		
    <LinearLayout
        style="@style/fwv"
        android:layout_margin="15dip"
        android:background="@drawable/ts_tk_bg" >
		<TextView 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="16dip"
		    android:text="内容"
		    android:gravity="center"
		    android:textColor="@color/text_black"
		    android:textSize="@dimen/text_font_16"/>
        <EditText
            android:id="@+id/et_content"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="12dip"
            android:background="@drawable/ts_tk_box"
            android:gravity="top"
            android:hint="请输入内容"
            android:maxLength="50"
            android:paddingLeft="8dip"
            android:paddingTop="8dip"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_light"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_font_14" />

        <LinearLayout
            android:layout_marginTop="8dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cancle"
                style="@style/fw"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dip"
                android:layout_marginTop="25dip"
                android:background="@drawable/ts_tk_btn"
                android:gravity="center"
                android:text="返回"
                android:padding="6dip"
                android:textColor="@color/white"
                android:textSize="@dimen/text_font_16" />

            <TextView
                android:padding="6dip"
                android:layout_weight="1"
                android:id="@+id/tv_submit"
                style="@style/fw"
                android:layout_gravity="center"
                android:layout_margin="10dip"
                android:layout_marginTop="25dip"
                android:background="@drawable/ts_tk_btn2"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/text_font_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>