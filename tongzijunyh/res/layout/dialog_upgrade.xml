<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8111"
    android:gravity="center" >

    <LinearLayout android:id="@+id/v_content"
        android:layout_width="270dp"
        android:layout_height="379dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:orientation="vertical" >

        <ImageView
            android:src="@drawable/upgrade_head"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="1"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="3dp" >
                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:text="最新版本：v2.2"
                    android:textColor="#333"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="更新内容："
                    android:textColor="#333"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_verdes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="不啦不啦更新说明不啦不啦更新说明不啦不啦更新说明不啦不啦更新说明不啦不啦更新说明不啦不啦更新说明不啦不啦更新说明不啦不啦更新说明不啦不啦更新说明不啦不啦更新说明"
                    android:textColor="#999"
                    android:textSize="13sp" />
            </LinearLayout>
        </ScrollView>
        </LinearLayout>
        <ImageView android:id="@+id/bt_upgrade"
            android:src="@drawable/upgrade_bottom"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView android:id="@+id/bt_cancel"
        android:src="@drawable/upgrade_close"
        android:layout_alignRight="@+id/v_content"
        android:layout_alignTop="@+id/v_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="-10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
