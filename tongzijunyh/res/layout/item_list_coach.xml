<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f4"
    android:orientation="horizontal"
    android:paddingBottom="10dip"
    android:paddingLeft="6dip"
    android:paddingRight="15dip"
    android:paddingTop="10dip" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <com.bm.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:layout_gravity="center"
            android:src="@drawable/default_avatar"
            app:border_color="#00000000"
            app:border_width="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:text="王小明"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />

                <TextView
                    android:id="@+id/tv_gender"
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:text="男"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:text="28岁"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />

                <com.bm.view.RatingBar
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/room_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    app:starDst="@drawable/pj_staroff"
                    app:starNumber="5"
                    app:starSrc="@drawable/pj_staron"
                    android:layout_marginLeft="12dp"
                    app:step="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bind"
        style="@style/ww"
        android:layout_width="70dp"
        android:layout_height="25dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dip"
        android:background="@drawable/btn_yellow_border"
        android:gravity="center"
        android:text="立即绑定"
        android:textColor="#A59945"
        android:textSize="@dimen/text_font_12" />

</LinearLayout>