<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="25dip"
        android:background="@drawable/login_box"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip" >

        <ImageView
            style="@style/ww"
            android:src="@drawable/icon_lock" />

        <EditText
            android:id="@+id/et_oldpwd"
            style="@style/ff"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入原支付密码"
            android:inputType="textPassword"
            android:paddingLeft="10dip"
            android:text=""
            android:textColor="@color/text_black"
            android:textColorHint="#bfbfbf"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_font_15" />
    </LinearLayout>
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="@drawable/login_box"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip" >

        <ImageView
            style="@style/ww"
            android:src="@drawable/icon_lock" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/ff"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入新支付密码(6-16位)"
            android:inputType="textPassword"
            android:paddingLeft="10dip"
            android:text=""
            android:textColor="@color/text_black"
            android:textColorHint="#bfbfbf"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_font_15" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="@drawable/login_box"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip" >

        <ImageView
            style="@style/ww"
            android:src="@drawable/icon_lock" />

        <EditText
            android:id="@+id/et_confirmpwd"
            style="@style/ff"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请再次输入新支付密码"
            android:inputType="textPassword"
            android:paddingLeft="10dip"
            android:text=""
            android:textColor="@color/text_black"
            android:textColorHint="#bfbfbf"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_font_15" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/text_font_16" />

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:text="忘记密码？"
        android:textColor="@color/account_textColor" />

</LinearLayout>