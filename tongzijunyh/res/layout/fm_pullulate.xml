<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f6f6f8"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#f6f6f8" >

        <ImageButton
            android:id="@+id/ib_left"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/back"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_center"
            style="@style/ww"
            android:layout_centerInParent="true"
            android:ems="8"
            android:gravity="center"
            android:singleLine="true"
            android:text="我的勋章"
            android:textColor="@color/txt_teacher_name"
            android:textSize="@dimen/text_font_22" />

        <TextView
            android:id="@+id/tv_right"
            style="@style/ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:text=""
            android:textColor="@color/personal_textNameColor"
            android:textSize="@dimen/text_font_17" />

        <ImageButton
            android:id="@+id/ib_right"
            style="@style/ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@null"
            android:padding="12dip"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_right"
            style="@style/wwh"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_right_share_left"
                style="@style/ww"
                android:layout_marginRight="10dip"
                android:background="@drawable/back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_right_share"
                style="@style/ww"
                android:background="@drawable/back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_right_fav"
                style="@style/ww"
                android:layout_marginLeft="10dip"
                android:background="@drawable/back"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <com.lib.widget.ReboundScrollView 
        style="@style/ff"
        android:scrollbars="none" >

        <LinearLayout style="@style/ffv"
         >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#bdbfcb" >

                <ImageView
                    android:id="@+id/im_headbg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="150dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:id="@+id/ll_head"
                    style="@style/fwv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip" >

                    <com.bm.view.CircleImageView
                        android:id="@+id/iv_sixview_head"
                        android:layout_width="110dip"
                        android:layout_height="110dip"
                        android:layout_gravity="center"
                         app:border_color="@android:color/transparent"
                         app:border_width="1dp"
                        />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/ww"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dip"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_font_14" />

                    <TextView
                        android:id="@+id/tv_age"
                        style="@style/ww"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dip"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_font_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_poptip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/guide_bg1"
                    android:gravity="center"
                    android:text="点击头像切换其他孩子"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:background="@color/pullulate_color" >

                <RelativeLayout
                    android:id="@+id/rl_a"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        style="@style/wwv"
                        android:layout_centerInParent="true" >

                        <TextView
                            android:id="@+id/tv_a_num"
                            style="@style/ww"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="@color/txt_teacher_name"
                            android:textSize="@dimen/text_font_15" />

                        <TextView
                            style="@style/ww"
                            android:layout_marginTop="2dip"
                            android:gravity="center"
                            android:text="已获勋章"
                            android:textColor="@color/txt_teacher_name"
                            android:textSize="@dimen/text_font_15" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="0.8dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="3dip"
                    android:layout_marginTop="3dip"
                    android:background="@color/txthit_color" />

                <RelativeLayout
                    android:id="@+id/rl_b"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        style="@style/wwv"
                        android:layout_centerInParent="true" >

                        <TextView
                            android:id="@+id/tv_b_num"
                            style="@style/ww"
                            android:gravity="center"
                            android:text="NO.03"
                            android:textColor="@color/txt_teacher_name"
                            android:textSize="@dimen/text_font_15" />

                        <TextView
                            android:id="@+id/tv_money"
                            style="@style/ww"
                            android:layout_marginTop="2dip"
                            android:gravity="center"
                            android:text="荣誉排行"
                            android:textColor="@color/txt_teacher_name"
                            android:textSize="@dimen/text_font_15" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/view_1"
                    android:layout_width="0.8dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="3dip"
                    android:layout_marginTop="3dip"
                    android:background="@color/txthit_color" />

                <RelativeLayout
                    android:id="@+id/rl_c"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_ry"
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/pullulate_label"
                        android:gravity="center"
                        android:text="荣誉榜"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_font_14" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/txthit_color" />

            <FrameLayout
                android:id="@+id/fm_content"
                style="@style/fw"
                android:layout_marginTop="10dip" >
            </FrameLayout>

            <TextView
                android:id="@+id/tv_get"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="20dip"
                android:background="@color/yellow"
                android:gravity="center"
                android:text="获取条件"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/text_font_15"
                android:visibility="gone" />

        </LinearLayout>
    </com.lib.widget.ReboundScrollView >

</LinearLayout>