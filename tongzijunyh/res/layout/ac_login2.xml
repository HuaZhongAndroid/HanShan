<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="12dip"
        android:paddingRight="12dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingTop="10dp"
                android:text="随便看看"
                android:textColor="@color/fm_mine_nickname"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp" >

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textColorHint="@color/text_light"
            android:textColor="@color/fm_mine_nickname"
            android:textCursorDrawable="@null"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe6e6e6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_verifcode"
                android:background="#ffa59945" />

            <TextView
                android:id="@+id/tv_verifcode"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dip"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/app_dominantHue"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_verifcode"
                android:paddingRight="10dp"
                android:background="@null"
                android:ems="10"
                android:maxLength="6"
                android:gravity="center_vertical|left"
                android:hint="请输入验证码"
                android:textCursorDrawable="@null"
                android:inputType="number"
                android:textColor="@color/fm_mine_nickname"
                android:textColorHint="@color/text_light"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe6e6e6" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录即代表阅读并同意"
                android:textColor="#ff999999"
                android:textSize="12sp" />
            <TextView android:id="@+id/tv_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="《用户协议》"
                android:textColor="@color/app_dominantHue"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginTop="35dp"
            android:background="@drawable/btn_login"
            android:gravity="center"
            android:text="登 录"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    
    <RelativeLayout 
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:paddingBottom="30dp"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:visibility="visible" >

            <View
                android:layout_width="35dp"
                android:layout_height="1dip"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp"
                android:text="其他登录方式"
                android:textColor="@color/txt_teacher_name"
                android:textSize="@dimen/text_font_15" />

            <View
                android:layout_width="35dp"
                android:layout_height="1dip"
                android:background="@color/line_color" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imgtb_weichat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/weichatlogo" />

    </LinearLayout>
</RelativeLayout>
</LinearLayout>