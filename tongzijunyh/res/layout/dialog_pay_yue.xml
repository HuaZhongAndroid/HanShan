<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:padding="0dip" >

    <LinearLayout
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_white_dialog_2"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_topms"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="10dip"
                android:text="提示"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_font_18" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_gravity="center"
            android:layout_marginBottom="15dip"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="内容内容内容内容内容内容"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_font_16" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/txt_Grey_zhou_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_Cancel"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textStyle="bold"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_font_17" />

            <View
                android:id="@+id/v_line"
                android:layout_width="1dip"
                android:layout_height="45dip"
                android:background="@color/txt_Grey_zhou_line" />

            <TextView
                android:id="@+id/btn_Determine"
                android:layout_width="0dip"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认支付"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/text_font_17" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>