<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fm_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="fill_parent"
        android:layout_height="130dip"
        android:scaleType="centerCrop"
        android:src="@drawable/testa" />

    <LinearLayout
        android:id="@+id/ll_"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/transparent"
        android:orientation="vertical"
        android:paddingBottom="4dip"
        android:paddingTop="4dip" >

        <TextView
            android:id="@+id/tv_name"
            style="@style/ww"
            android:layout_gravity="bottom"
            android:layout_marginLeft="3dip"
            android:singleLine="true"
            android:text="上海龙之梦店"
            android:textColor="@color/white" />

      <!--   <com.bm.view.RatingBar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sectorView"
            android:layout_width="fill_parent"
            android:layout_height="8dip"
            android:layout_marginLeft="6dip"
            android:visibility="gone"
            app:clickable="false"
            app:starDst="@drawable/star_white"
            app:starNumber="5"
            app:starSrc="@drawable/star"
            app:step="1" />
 -->
        <RatingBar
            android:layout_marginTop="2dip"
            android:layout_marginLeft="6dip"
            android:id="@+id/room_ratingbars"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dip"
            android:visibility="gone"
            android:numStars="5" >
        </RatingBar>
        
         <com.lib.widget.RatingBarView
             android:layout_marginLeft="3dip"
             xmlns:app="http://schemas.android.com/apk/res-auto"
	        android:id="@+id/custom_ratingbar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        app:starCount="5"
	        app:starEmpty="@drawable/star_white"
	        app:starFill="@drawable/star_two"
	        app:starImageSize="13dp"/>
    </LinearLayout>

</FrameLayout>