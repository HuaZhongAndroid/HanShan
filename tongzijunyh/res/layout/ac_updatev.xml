<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="230dip"
            android:orientation="vertical" >

            <com.lib.widget.RoundImageViewFive
                android:id="@+id/iv_pic"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dip"
                android:background="@drawable/version_ico"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="20dip"
                android:text="放手，让孩子自己来！"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/text_font_16" />

            <TextView
                android:id="@+id/tv_verson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:text="版本  1.1"
                android:textColor="@color/txt_name"
                android:textSize="@dimen/text_font_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="50dip"
            android:background="@drawable/cz_btn"
            android:gravity="center"
            android:text="当前已是最新版本"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_16" />

        <TextView
            android:id="@+id/tv_newVerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dip"
            android:text="当前已是最新版本"
            android:textColor="@color/txt_name"
            android:textSize="@dimen/text_font_16"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        style="@style/fw"
        android:id="@+id/tv_service"
        android:padding="10dip"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="服务条款"
        android:textColor="#A3B8CF"
        android:textSize="@dimen/text_font_16" />

    <TextView
        style="@style/fw"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dip"
        android:gravity="center"
        android:padding="5dip"
        android:text="CopyRight JASCOUTS © All Right Reserved." />

</LinearLayout>