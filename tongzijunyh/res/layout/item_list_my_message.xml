<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        style="@style/fwh"
        android:layout_marginTop="20dip" >

        <ImageView
            android:id="@+id/img_read"
            android:layout_width="6dip"
            android:layout_height="6dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:src="@drawable/dot_red" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:text="双十一特惠，大量活动课程低价销售"
            android:textColor="@color/txt_teacher_name"
            android:textSize="@dimen/text_font_18" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="6dip"
        android:singleLine="true"
        android:text="2015.10.20 13:20"
        android:textColor="@color/txt_color_a"
        android:textSize="@dimen/text_font_14" />

    <com.lib.widget.RoundImageView100dip
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="8dip"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_context"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="双十一特惠，大量活动课程低价销售"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_font_14" />

</LinearLayout>