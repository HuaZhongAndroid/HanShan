<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dip"
        android:gravity="center_vertical"
        android:text="登录账号"
        android:textColor="@color/txt_title_detail"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/ll_f"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:text="手机号码"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_font_16" />

        <TextView
            android:id="@+id/phone_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:layout_weight="1"
            android:text="13409241176"
            android:textColor="#333333"
            android:textSize="@dimen/text_font_16" />

        <TextView
            android:id="@+id/tv_change_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"
            android:text="更换号码"
            android:textColor="#4A90E2"
            android:textSize="@dimen/text_font_16" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.01dip"
        android:background="@color/line_shallow_gray" />

    <LinearLayout
        android:id="@+id/ll_c"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:text="关联微信"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_font_16" />

        <TextView
            android:id="@+id/weichat_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:layout_weight="1"
            android:text="小宝贝"
            android:textColor="#333333"
            android:textSize="@dimen/text_font_16" />

        <TextView
            android:id="@+id/tv_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"
            android:text="解除关联"
            android:textColor="#4A90E2"
            android:textSize="@dimen/text_font_16" />
        <TextView
            android:id="@+id/tv_tobind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"
            android:text="关联微信"
            android:textColor="#4A90E2"
            android:visibility="gone"
            android:textSize="@dimen/text_font_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_d"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:scaleType="centerInside"
            android:src="@drawable/sz_4"
            android:visibility="gone" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:layout_weight="1"
            android:text="设置支付密码"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_font_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dip"
            android:scaleType="centerInside"
            android:src="@drawable/my_more" />
    </LinearLayout>

</LinearLayout>