<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/explore_bg_Color"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout style="@style/fwv" >

                <!-- 广告图 -->

                <ImageView
                    android:id="@+id/img_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="170dip"
                    android:scaleType="centerCrop" />

                <com.lib.widget.BannerView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/bannerView"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:visibility="gone" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/banner_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.lib.widget.DotView
                        android:id="@+id/banner_dotview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="10dp"
                        app:dot_number="5"
                        app:dot_radius="4dp"
                        app:dot_selected_color="0xffffffff"
                        app:dot_span="8dp"
                        app:dot_unselected_color="0x80ffffff" />
                </com.lib.widget.BannerView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/ww"
                            android:layout_margin="8dip"
                            android:text="课程"
                            android:textColor="@color/txt_teacher_name"
                            android:textSize="@dimen/text_font_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_price"
                            style="@style/ww"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dip"
                            android:layout_weight="1"
                            android:text="￥0.00"
                            android:textColor="@color/app_dominantHue"
                            android:textSize="@dimen/text_font_18" />

                        <TextView
                            android:id="@+id/tv_ages"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dip"
                            android:background="@drawable/label_category"
                            android:gravity="center"
                            android:paddingBottom="1dip"
                            android:paddingTop="1dip"
                            android:text="(3-4岁)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_font_12" />

                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dip"
                            android:background="@drawable/label_category"
                            android:gravity="center"
                            android:paddingBottom="1dip"
                            android:paddingTop="1dip"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_font_12" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <!-- 课程2种类型 -->

            <include layout="@layout/layout_kc_1" />

            <include layout="@layout/layout_kc_2" />

            <!-- 课程要点 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <LinearLayout
                style="@style/fwv"
                android:paddingLeft="8dip"
                android:layout_marginTop="12dip"
                android:background="@color/white"
                android:paddingRight="6dip" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:text="课程要点"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dip"
                    android:background="@color/fm_mine_line" />

                <WebView
                    android:id="@+id/webview"
                    style="@style/fw"
                    android:layout_marginTop="5dip"
                    android:background="@android:color/transparent"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/tv_coursecontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dip"
                    android:text="它集体适能锻炼、胆量磨练、游戏娱乐、情景模拟、角色扮演、成长课程、智力开发、性格塑造等八大环节于一体，将游戏与教育相融合"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/text_font_14"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_course"
                    style="@style/fw"
                    android:layout_width="fill_parent"
                    android:layout_height="90dip"
                    android:layout_marginBottom="6dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="8dip"
                    android:paddingLeft="8dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_hd"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 教练信息 -->

            <LinearLayout
                android:id="@+id/ll_coach"
                style="@style/fwv" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_color" />

                <LinearLayout
                    style="@style/fwv"
                    android:layout_marginTop="12dip"
                    android:background="@color/white"
                    android:paddingLeft="8dip" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/line_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dip"
                        android:text="教练信息"
                        android:textColor="@color/txt_teacher_name"
                        android:textSize="@dimen/text_font_16" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.2dip"
                        android:layout_marginLeft="8dip"
                        android:background="@color/fm_mine_line" />

                    <LinearLayout
                        android:id="@+id/ll_jlinfo"
                        android:layout_width="fill_parent"
                        android:layout_height="65dip"
                        android:layout_marginTop="7dip"
                        android:orientation="horizontal"
                        android:paddingLeft="8dip" >

                        <com.bm.view.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/img_head"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            app:poly_border="true"
                            app:poly_border_width="5dp"
                            app:poly_corner_radius="10"
                            app:poly_rotation_angle="90"
                            app:poly_vertices="6" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dip"
                            android:layout_marginTop="5dip"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <LinearLayout
                                style="@style/fwh"
                                android:gravity="center_vertical" >

                                <TextView
                                    android:id="@+id/tv_username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Vikie"
                                    android:textColor="@color/txt_teacher_name"
                                    android:textSize="@dimen/text_font_16" />

                                <com.bm.view.RatingBar
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/sectorView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="12dip"
                                    android:layout_marginLeft="10dip"
                                    app:clickable="false"
                                    app:starDst="@drawable/pj_staroff"
                                    app:starNumber="5"
                                    app:starSrc="@drawable/pj_staron"
                                    app:step="1" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_jlage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dip"
                                android:gravity="center_vertical"
                                android:text="0岁"
                                android:textColor="@color/txt_teacher_name"
                                android:textSize="@dimen/text_font_14" />
                        </LinearLayout>

                        <ImageView
                            style="@style/ww"
                            android:layout_gravity="center_vertical"
                            android:padding="12dip"
                            android:src="@drawable/my_more" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 报名人数 -->

            <LinearLayout
                android:id="@+id/ll_wbr"
                style="@style/fwv" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:id="@+id/ll_bmrs"
                    style="@style/fwv"
                    android:layout_marginTop="12dip"
                    android:background="@color/white" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/line_color" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="8dip"
                        android:paddingRight="8dip" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="45dip"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dip"
                            android:text="课程玩伴儿"
                            android:textColor="@color/txt_teacher_name"
                            android:textSize="@dimen/text_font_16" />

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dip"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/txt_name"
                            android:textSize="@dimen/text_font_14" />

                        <ImageView
                            style="@style/ww"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="6dip"
                            android:layout_marginTop="1dip"
                            android:src="@drawable/my_more" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.2dip"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="8dip"
                        android:background="@color/fm_mine_line" />

                    <com.lib.widget.FuGridView
                        android:id="@+id/gv_person"
                        style="@style/ff"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="8dip"
                        android:layout_marginTop="8dip"
                        android:cacheColorHint="@color/transparent"
                        android:horizontalSpacing="10dip"
                        android:listSelector="@color/transparent"
                        android:numColumns="5"
                        android:scrollbars="none"
                        android:verticalSpacing="10dip" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view_play"
                android:layout_width="fill_parent"
                android:layout_height="0.3dip"
                android:background="@color/line_color" />

            <LinearLayout
                style="@style/fwv"
                android:layout_marginTop="12dip"
                android:background="@color/white"
                android:paddingLeft="8dip"
                android:paddingRight="6dip" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.3dip"
                    android:background="@color/line_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:paddingRight="8dip"
                    android:text="注意事项"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:background="@color/fm_mine_line" />

                <WebView
                    android:id="@+id/webview_zysx"
                    style="@style/fw"
                    android:layout_marginTop="5dip"
                    android:background="@android:color/transparent"
                    android:scrollbars="none" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dip"
                android:background="@color/line_color" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dip"
                android:layout_marginTop="12dip"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/ll_mzsm"
                style="@style/fwh"
                android:background="@color/white"
                android:paddingLeft="8dip"
                android:paddingRight="8dip" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:text="免责声明"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_16" />

                <ImageView
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:padding="12dip"
                    android:src="@drawable/my_more" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dip"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="55dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dip"
                android:paddingRight="8dip" >

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:background="@color/line_color" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="推荐课程"
                    android:textColor="@color/txt_color_a"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:background="@color/line_color" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dip"
                android:background="@color/fm_mine_line" />

            <com.lib.widget.FuListView
                android:id="@+id/lv_course"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/line_color"
                android:dividerHeight="1dip"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:scrollingCache="false" />

            <View
                android:id="@+id/view_bottom"
                android:layout_width="fill_parent"
                android:layout_height="60dip" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bm"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_gravity="bottom"
        android:background="#eeedf2"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/img_collect"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icon_collection" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_line" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icon_share" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:background="@color/txt_yellow_color"
            android:gravity="center"
            android:text="立即报名"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_18" />
    </LinearLayout>

</FrameLayout>