<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/personal_bgcolor"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/fwv"
        android:background="@color/bg_color" >

        <LinearLayout
            android:background="#fff"
            style="@style/fwh" >

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="全部"
                    android:textColor="@color/app_dominantHue"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:id="@+id/v_1"
                    android:layout_width="40dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/kc_shape" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_notStart"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="未开始"
                    android:textColor="@color/course_bg_textColor"
                    android:textSize="@dimen/text_font_16" />

                <View
                     android:id="@+id/v_2"
                    android:layout_width="40dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/kc_shape"
                    android:visibility="gone" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_underway"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="进行中"
                    android:textColor="@color/course_bg_textColor"
                    android:textSize="@dimen/text_font_16" />

                <View
                     android:id="@+id/v_3"
                    android:layout_width="40dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/kc_shape"
                    android:visibility="gone" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_end"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="已结束"
                    android:textColor="@color/course_bg_textColor"
                    android:textSize="@dimen/text_font_16" />

                <View
                     android:id="@+id/v_4"
                    android:layout_width="40dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/kc_shape"
                    android:visibility="gone" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_payments"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="待付款"
                    android:textColor="@color/course_bg_textColor"
                    android:textSize="@dimen/text_font_16" />

                <View
                     android:id="@+id/v_5"
                    android:layout_width="40dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/kc_shape"
                    android:visibility="gone" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:background="@color/line_color" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>